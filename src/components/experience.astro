---
import IslandWrapper from "./island-wrapper.astro";
import TimelineItem from "./timeline-item.astro";
import experience from "../data/experience.json";
---

<IslandWrapper>
  <h1>Work experience</h1>

  <div
    class="mt-8 space-y-8 relative before:absolute before:inset-0 before:ml-5 before:-translate-x-px md:before:ml-[9.05rem] md:before:translate-x-0 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-transparent before:via-slate-300 before:to-transparent"
  >
    {
      experience.map((item) => (
        <TimelineItem
          date={item.date}
          jobTitle={item.jobTitle}
          company={item.company}
          bulletPoints={item.bulletPoints}
        />
      ))
    }
  </div>
</IslandWrapper>
