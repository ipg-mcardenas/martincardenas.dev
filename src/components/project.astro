---
const { project } = Astro.props;
---

<div
  class="mt-8 bg-gray-50 rounded-md border border-slate-200 shadow flex flex-col justify-center p-8"
>
  <div class="flex items-center justify-center min-w-2xl">
    <div class="w-3/4">
      <h2 class="text-lg font-semibold">{project.title}</h2>
      <p>{project.shortDescription}</p>
      <i>{project.techStack.join(", ")}</i>
    </div>
    <div class="w-1/4 flex flex-col items-center justify-center gap-2">
      <a
        href={project.gitHub}
        class="flex rounded-full border border-gray-800 shadow-sm px-4 py-2 text-sm text-white bg-[#24292F] hover:bg-[#24292F]/90 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium"
      >
        <svg
          class="w-5 h-5 mr-2 align-middle"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z"
            clip-rule="evenodd"></path>
        </svg>
        Source code
        <a
          href={project.demoUrl || "#"}
          class="rounded-full border border-gray-300 shadow-sm px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 cursor-not-allowed pointer-events-none"
        >
          {project.demoUrl ? "Live demo" : "Demo not available"}
        </a>
      </a>
    </div>
  </div>
  <div class="mt-8 grid grid-cols-2 gap-4">
    {
      project.images.map((img: string) => (
        <img
          src={img}
          width="400px"
          class="rounded-md shadow border border-gray-300 p-2"
          alt={project.title}
        />
      ))
    }
  </div>
</div>
