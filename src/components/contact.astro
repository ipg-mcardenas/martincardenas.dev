---
import { flags } from "../../flags";
const { name, email, phoneNumber, phoneNumberLabel } = Astro.props;

function getPhone() {
  return flags.showExplicitEmailAndPhone
    ? phoneNumberLabel
    : "Chat with me on WhatsApp";
}

function getEmail() {
  return flags.showExplicitEmailAndPhone ? email : "Send me an email";
}
---

<div class="flex lg:items-center flex-col sm:flex-row gap-4">
  <a
    href={`mailto:${email}?body=Hello,%20${name}`}
    target="_blank"
    class="flex gap-2 items-center justify-center rounded-full border border-slate-200 dark:border-[#3e3e42] px-4 py-2 text-sm font-medium hover:bg-gray-100/90 focus:ring-4 bg-gray-100 dark:bg-[#2d2d30] focus:outline-none focus:ring-gray-100/50"
  >
    <svg
      class="w-6 h-6 text-gray-800"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      fill="none"
      viewBox="0 0 24 24"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-width="2"
        d="m3.5 5.5 7.893 6.036a1 1 0 0 0 1.214 0L20.5 5.5M4 19h16a1 1 0 0 0 1-1V6a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1Z"
      ></path>
    </svg>
    {getEmail()}
  </a>
  <a
    href=`https://api.whatsapp.com/send?phone=${phoneNumber}&text=Hello,%20${name}`
    target="_blank"
    class="flex gap-2 items-center justify-center text-white rounded-full border border-[#075e54] px-4 py-2 text-sm font-medium hover:bg-[#20D366]/90 focus:ring-4 bg-[#20D366] focus:outline-none focus:ring-[#20D366]/50"
    ><svg
      class="w-6 h-6 text-white"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      fill="none"
      viewBox="0 0 24 24"
    >
      <path
        fill="currentColor"
        fill-rule="evenodd"
        d="M12 4a8 8 0 0 0-6.895 12.06l.569.718-.697 2.359 2.32-.648.379.243A8 8 0 1 0 12 4ZM2 12C2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10a9.96 9.96 0 0 1-5.016-1.347l-4.948 1.382 1.426-4.829-.006-.007-.033-.055A9.958 9.958 0 0 1 2 12Z"
        clip-rule="evenodd"></path>
      <path
        fill="currentColor"
        d="M16.735 13.492c-.038-.018-1.497-.736-1.756-.83a1.008 1.008 0 0 0-.34-.075c-.196 0-.362.098-.49.291-.146.217-.587.732-.723.886-.018.02-.042.045-.057.045-.013 0-.239-.093-.307-.123-1.564-.68-2.751-2.313-2.914-2.589-.023-.04-.024-.057-.024-.057.005-.021.058-.074.085-.101.08-.079.166-.182.249-.283l.117-.14c.121-.14.175-.25.237-.375l.033-.066a.68.68 0 0 0-.02-.64c-.034-.069-.65-1.555-.715-1.711-.158-.377-.366-.552-.655-.552-.027 0 0 0-.112.005-.137.005-.883.104-1.213.311-.35.22-.94.924-.94 2.16 0 1.112.705 2.162 1.008 2.561l.041.06c1.161 1.695 2.608 2.951 4.074 3.537 1.412.564 2.081.63 2.461.63.16 0 .288-.013.4-.024l.072-.007c.488-.043 1.56-.599 1.804-1.276.192-.534.243-1.117.115-1.329-.088-.144-.239-.216-.43-.308Z"
      ></path>
    </svg>
    {getPhone()}</a
  >
</div>
